@model WhatsIn.Models.ServiceModel

<div class="intro" style="margin-top:50px;">
    <div class="fullpage" style="background-color:antiquewhite;">
        <div class="ab-wrap">
            <div class="ab-center" >
                <div class="wowload fadeInDown">
                    <!--img src="images/logo.png" class="wowload rotateIn"-->
                    <!--h1 class="title">What's In?</!--h1-->
                      <img src="images/whats_in__icon.png" class="wowload rotateIn">
                    <!--p>
                        Ready to serve you!
                    </p-->
                    @using (Html.BeginForm("", "Results", FormMethod.Post, new { @class = "form-inline", role = "form" }))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(m=> m.Location, new { @class = "form-control", placeholder = "Ex. Santa Rosa Laguna, Quezon City" })                            
                        </div>
                        <button type="submit" class="btn btn-success"><span class="fa fa-search"></span>&nbsp;Search</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <a href="#about" class="anchor scroll wowload fadeInDownBig"><i class="fa fa-angle-down  fa-4x"></i></a>

</div>
<!-- intro -->
<!-- about -->
<div class="about spacer" id="about">
    <div class="container">
        <div class="row">
            <div class="col-md-6 wowload fadeInLeftBig">
                <!--h3>About What's In?</!--h3-->
                <h3>#DiscoverWhatsInYourPlace</h3>
                <h4>#TasteTheFoods</h4>
                <h4>#ExploreThePlaces</h4>
                <h4>#ExperienceTheFun</h4>
                <!--p><h3>#DiscoverWhatsInYourPlace</h3>What's In? is a platform to help people easily find what they are looking for whereever they are.</p-->
            </div>
            <div class="col-md-6 text-center"><img src="images/traveling.jpg" class="img-responsive wowload fadeInUp" style="width:90%"></div>
            <br />
        </div>
    </div>
</div>
<!-- about -->
<!-- contact -->
<div class="contact wowload fadeIn" id="contact" style="background-color:antiquewhite;">

    <div class="container text-center" >
        <h4>@ViewBag.Message</h4>
        <h2 style="color:#333">Contact us</h2>
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <form>
                    <div class="form-group">
                        <input id="name" name="name" type="text" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input id="email" name="email" type="email" class="form-control" placeholder="Email address">
                    </div>
                    <div class="form-group">
                        <textarea id="message" name="message" class="form-control" placeholder="Your Message" rows="5"></textarea>
                    </div>
                    <button id="btnContact" type="submit" class="btn btn-success"><i class="fa fa-send-o"></i> Submit</button>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- contact -->

<script>
    $('#btnContact').click(function (e) {
        e.preventDefault();
        var name = $('#name').val();
        var email = $('#email').val();
        var message = $('#message').val();
        
        $.ajax({
            type: "POST",
            url: "@Url.Action("SendMessage","Home")",
            data: {
                name: name,
                emailaddress: email,
                content: message,
            },
            success: function (data) {
                alert("Your message has been sent!");
                location.reload();
            },
        });
    });
</script>