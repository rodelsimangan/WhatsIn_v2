@model List<WhatsIn.Models.ServiceModel>


<div>
    <div class="row">&nbsp;</div>
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ctr = i % 3;

        if (ctr == 0)
        {
            @:<div class="row">
            }
            var item = Model[i];
            <div class="col-xs-4 text-center">
                <span style="font-weight:bold"><a href="#" id="@item.Id" class="btn UpdateServiceButton">@item.Name </a></span>&nbsp;
                <br />
                <button id="@item.Id" class="btn btn-circle btn-xs red AddServiceImageButton">
                    <img id="@item.Id" class="img-thumbnail imgService" alt="Add Image" />
                </button><br />
                <button data-toggle="modal" id="@item.Id" class="btn btn-circle btn-xs btn-success RemoveServiceButton"><span class="fa fa-trash"></span></button>
            </div>
            if ((i == Model.Count() - 1) || (ctr == 2))
            {
            @:</div><div class="row">&nbsp;</div>
        }

    }
</div>