@model List<WhatsIn.Models.ServiceModel>

@{
    ViewBag.Title = "Results";
}

<div class="row margin-top-15" style="background-color:antiquewhite">

    <br /><br /><br /><br /><br /><br />
    <div class="row">
        <div class="col-md-12">
            <div class="col-xs-12 text-left" id="divSeach">
                @{Html.RenderPartial("Search", new WhatsIn.Models.ServiceModel());}
                <!--form class="form-inline">
                    <div class="form-group">
                        <input type="text" class="form-control" id="service-name" style="width:350px" placeholder="Service: Ex. Van Rental, Aircon Cleaning"> &nbsp;&nbsp;
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="service-location" style="width:350px" placeholder="Location: Ex. Santa Rosa, Laguna, Quezon City"> &nbsp;&nbsp;
                    </div>
                    <button type="submit" class="btn btn-success" id="btnSearch">Search Again</button>
                </form-->
            </div>
            <div class="col-xs-12">
                <hr />
                <h4>
                    @ViewBag.Message <span>&nbsp;&nbsp;</span>
                    @if (ViewBag.FoodAndDiningCount > 0)
                    {
                        <span>&nbsp;&nbsp;</span><a href="#"><i class="fa fa-cutlery"></i><span class="badge">@ViewBag.FoodAndDiningCount</span></a>
                    }
                    @if (ViewBag.HotelAndAccomodationsCount > 0)
                    {
                        <span>&nbsp;&nbsp;&nbsp;</span><a href="#"><i class="fa fa-hotel"></i><span class="badge">@ViewBag.HotelAndAccomodationsCount</span></a>
                    }
                    @if (ViewBag.TouristSpots > 0)
                    {
                        <span>&nbsp;&nbsp;&nbsp;</span><a href="#"><i class="fa fa-university"></i><span class="badge">@ViewBag.TouristSpots</span></a>
                    }
                    @if (ViewBag.BeautyAndRelaxation > 0)
                    {
                        <span>&nbsp;&nbsp;&nbsp;</span><a href="#"><i class="fa fa-eye"></i><span class="badge">@ViewBag.BeautyAndRelaxation</span></a>
                    }
                    @if (ViewBag.SportsAndRecreation > 0)
                    {
                        <span>&nbsp;&nbsp;&nbsp;</span><a href="#"><i class="fa fa-bicycle"></i><span class="badge">@ViewBag.SportsAndRecreation</span></a>
                    }
                    @if (ViewBag.ShoppingAndSouvenirs > 0)
                    {
                        <span>&nbsp;&nbsp;&nbsp;</span><a href="#"><i class="fa fa-shopping-basket"></i><span class="badge">@ViewBag.ShoppingAndSouvenirs</span></a>
                    }
                </h4> <hr />
            </div>
            <div class="col-xs-12">
                <div id="serviceListDiv">
                    @{Html.RenderAction("ServiceList", "Results", new { Model = Model });}
                </div>
                <div id="loadingDiv" style="text-align: center; display: none; margin-bottom: 20px;">
                    <img alt="Loading" src="@Url.Content("~/images/ajax-loader.gif")" />
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(function () {

        $(".imgService").each(function (e) {
            e.preventDefault;
            var serviceId = $(this).prop('id');

            var $image = $(this);
            $.ajax({
                type: "Get",
                url: "@Url.Action("GetMyFirstServiceImage","Home")",
                data: {
                    serviceId: serviceId,
                },
                success: function (data) {
                    if(data != "")
                        $image.attr("src", "/Uploads/ServiceImages/" + data);
                },
            });

        });
    });


    $('#btnSearch').click(function (e) {
        e.preventDefault();
        var serviceName = $('#Name').val();
        var serviceLoc = $('#Location').val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("","Results")",
            data: {
                name: serviceName,
                location: serviceLoc,
            },
            success: function (data) {
                location.reload(true);
            },
        });
    });

    var BlockNumber = 2;  //Infinate Scroll starts from second block
    var NoMoreData = false;
    var inProgress = false;
    $(window).scroll(function () {
        var serviceName = $('#Name').val();
        var serviceLoc = $('#Location').val();
        if ($(window).scrollTop() == $(document).height() - $(window).height() && !NoMoreData && !inProgress) {

            inProgress = true;
            $("#loadingDiv").show();

            $.post("@Url.Action("InfinateScroll", "Results")", { "name": serviceName, "location": serviceLoc , "BlockNumber": BlockNumber  },
                    function (data) {

                        BlockNumber = BlockNumber + 1;
                        NoMoreData = data.NoMoreData;
                        $("#serviceListDiv").append(data.HTMLString);
                        $("#loadingDiv").hide();
                        inProgress = false;
                    });
        }
    });
</script>
