@model WhatsIn.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}
<h2>@ViewBag.Title.</h2>
<h4>
    You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
    Please fill-up below details for this site and click the Register button to finish
    the registration.
</h4>
@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Warning!</strong> This website uses cookies and stores your personal Facebook information. By completing the details and clicking the button Register you are agreeing to our Terms of Use. Review our <a href="@(Url.Action("TermsOfUse", "Home"))" style="color:rgb(208, 88, 3);">Terms of Use</a> for more details.
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12 text-center">
            @Html.HiddenFor(m => m.NameIdentifier)
            @Html.HiddenFor(m => m.ProfilePicture)
            <img src="@Model.ProfilePicture" title="@Model.Name" alt="@Model.Name" class="img-rounded img-thumbnail" style="height:160px;" />
        </div>
        <div class="col-md-3">&nbsp;</div>
    </div>
    <div class="form-group text-center">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label left" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "true" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">&nbsp;</div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label left" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "true" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">&nbsp;</div>
    </div>
    <!--div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "col-md-4 control-label left" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger", @width = "150"  })
        </div>
        <div class="col-md-3">&nbsp;</div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Location, new { @class = "col-md-4 control-label left" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger", @width = "150" })
        </div>
        <div class="col-md-3">&nbsp;</div>
    </div-->
    <div class="form-group">
        @Html.LabelFor(m => m.ContactNumber, new { @class = "col-md-4 control-label left" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ContactNumber, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">&nbsp;</div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.WebsiteAddress, new { @class = "col-md-4 control-label left" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.WebsiteAddress, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.WebsiteAddress, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">&nbsp;</div>
    </div>
    <div class="form-group">
        <div class="col-md-12 text-center">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>


}
